extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='password') Password:
      input#password.form-control(type='password' name='password' trim='true' required='true')
      label(for='password2') Confirm Password:
      input#password2.form-control(type='password' name='password2')
      label(for='new_password') New Password:
      input#new_password.form-control(type='password' name='new_password' trim='true' required='true')

    button.btn.btn-primary(type='submit') Submit
  if errors 
    ul
      for error in errors
        li!= error.msg