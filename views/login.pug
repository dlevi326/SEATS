extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='email') Email:
      input#email.form-control(type='email', placeholder='name@email.com' name='email' trim='true' required='true')
      label(for='password') Password:
      input#password.form-control(type='password' name='password' trim='true' required='true') 
    button.btn.btn-primary(type='submit') Login
  if errors 
    ul
      for error in errors
        li!= error